<h1>Professores cadastrados</h1>

<table class="table table-hover"> 
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Celular</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.matricula %></td>
        <td><%= professor.celular %></td>
        <td><%= professor.telefone %></td>
        <td><%= professor.email %></td>
        <td><%= link_to image_tag("icons/ficha.png", :title => "Detalhes do professor", :width => "30px"), professor %></td>
        <td><%= link_to image_tag("icons/editdocumnto.png", :title => "Editar professor", :width => "30px"), edit_professor_path(professor) %></td>
        <td><%= link_to image_tag("icons/excluir.png", :title => "Excluir professor", :width => "30px"), professor, method: :delete, data: { confirm: 'Deseja realmente excluir este item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo professor', new_professor_path %>
