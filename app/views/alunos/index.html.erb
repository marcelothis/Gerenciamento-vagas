<h1>Alunos cadastrados</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Celular</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.celular %></td>
        <td><%= aluno.telefone %></td>
        <td><%= aluno.email %></td>
        
        <td><%= link_to image_tag("icons/ficha.png", :title => "Detalhes aluno", :width => "30px"), aluno %></td>
        <td><%= link_to image_tag("icons/editdocumnto.png", :title => "Editar aluno", :width => "30px"), edit_aluno_path(aluno) %></td>
        <td><%= link_to image_tag("icons/excluir.png", :title => "Excluir aluno", :width => "30px"), aluno, method: :delete, data: { confirm: 'Deseja realmente excluir este item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo aluno', new_aluno_path %>
